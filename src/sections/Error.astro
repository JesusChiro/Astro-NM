---
import Action from "@/components/Action.astro";
import NMT from "@/icons/nmt.astro";
import Typography from "@/components/Typography.astro";
const { error, message, contextMessage } = Astro.props;
---

<section
  class="m-auto flex w-full flex-wrap place-items-center items-center justify-center "
>
  <a href="/">
    <NMT/>
  </a>
  <div class="m-5 mt-16 text-center">
    <Typography
      as="h1"
      variant="Jost-title"
      color="textDarkMode"
      class:list={"mb-10 font-bold"}
    >
      error {error}
    </Typography>
    <Typography
      as="h2"
      variant="h2"
      color="textDarkMode"
      class:list={"text-white"}
    >
      <p>{message}</p>
    </Typography>
    <p class="mt-5 max-w-80 text-xl text-logonmt">{contextMessage}</p>
    <Action
      class="mt-10 text-center border-logonmt text-white hover:bg-logonmt"
      href="/"
      aria-label="volver a la pÃ¡gina principal"
      as="a"
    >
      Ir al inicio
    </Action>
  </div>
</section>
