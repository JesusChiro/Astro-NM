---
import BoxerTitleName from "@/components/BoxerTitleName.astro";

interface Props {
  readonly id: string;
  readonly title: string;
  readonly text: string;
  readonly customer?: string;
  readonly loading?: "lazy" | "eager";
}

const { text, title, customer, id, loading } = Astro.props;
---

<section class="flex flex-col lg:flex-row lg:w-10/12 mx-auto mb-10">
  <aside class="order-2 lg:order-1 p-4 lg:w-1/2 lg:p-8">
    <img
      decoding="async"
      class="h-auto w-full object-cover aspect-video"
      alt={`FotografÃ­a de ${title}`}
      src={`/proyectos/${id}.jpg`}
      style="mask-image: linear-gradient(to bottom, black 70%, transparent 90%);"
      loading={loading}
    />
  </aside>

  <aside class="flex flex-col my-4 lg:w-1/2 lg:p-8">
    <div class="">
      <h4
        class="order-1 text-center text-white pb-2 border-b-2 lg:order-2 text-3xl lg:text-2xl"
      >
        Cliente: <span class="font-medium">{customer}</span>
      </h4>
    </div>
    <div class="text-2xl p-4 lg:text-base">
      <BoxerTitleName name={text} />
    </div>
  </aside>
</section>
