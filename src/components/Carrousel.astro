---
import { SLIDERHEADER } from "@/utils/consts";
import Action from "./Action.astro";
---

<div
  class=" mb-0 h-[650px] px-4 sm:px-5 md:mt-16 lg:pb-8 lg:m-auto items-center mt-10 lg:mb-16"
>
  <!-- slider 1 - objeto debajo de nav   -->
  <div id="slider">
    <!-- contenedor principal  -->
    <div id="slides" class="">
      <!-- contenedor que agrupa todos los div una detras de otro -->
      <div id="overflow" class="h-auto">
        <!--contenedor que agrupa el inner dentro del cuadro  -->
        <div class="inner">
          <!--contenedor que agrupa los slides en la platilla de slides -->
          {
            SLIDERHEADER.map(
              ({ Title, Subtitle, Description, Img, AltSlider }) => (
                <div class="slide lg:scale-100 lg:w-full">
                  <div class="my-auto flex-col w-3/4 h-[650px] justify-between lg:flex lg:flex-row lg:mx-auto lg:h-auto lg:w-full">
                    <div class="w-full lg:w-2/4">
                      <h1 class="text-4xl font-semibold my-10">{Title}</h1>
                      <h2 class="text-2xl font-medium mb-5">{Subtitle}</h2>
                      <p class="text-sm md:text-pretty md:text-xl">
                        {Description}
                      </p>
                      <a href="/nosotros">
                        <Action
                          class="mt-10 text-center border-logonmt text-white hover:bg-logonmt"
                          href="/servicios"
                          aria-label="volver a la pÃ¡gina principal"
                          as="a"
                        >
                          Entra..
                        </Action>
                      </a>
                    </div>
                    <div class="w-2/5 mx-auto justify-center items-center lg:w-2/4 lg:mt-10 lg:justify-center lg:p-auto lg:h-auto">
                      <img
                        alt={AltSlider}
                        class="mt-10 lg:w-3/4 justify-center lg:mx-auto"
                        src={Img}
                        style="filter: drop-shadow(0px 0px 50px rgba(0, 0, 0, 0.5));
            mask-image: linear-gradient(to bottom, bg-primary  70%, transparent 95%) ;"
                      />
                    </div>
                  </div>
                </div>
              )
            )
          }
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  /***/
  /*carrusel de servicios - inicio*/
  #slider {
    margin-left: auto;
    margin-right: auto;
    width: 1000px;
    height: 600px;
  }

  #slides {
    width: 1000px;
    height: 600px;
  }

  #overflow {
    width: 100%;
    overflow: hidden;
    width: 1000px;
    height: 600px;
  }

  .inner {
    width: 1000px;
    height: fit-content;
  }

  #slider {
    margin: 0 auto;
    width: 1000px;
    max-width: 100%;
    text-align: center;
  }

  #slides {
    padding: auto;
    position: relative;
    z-index: 1;
  }

  #overflow {
    width: 100%;
    overflow: hidden;
  }

  #slides .inner {
    transition: margin-left 800ms cubic-bezier(0.77, 0, 0.175, 1);
    width: 400%;
    height: 600px;
    animation: slide 30s infinite alternate ease-in-out;
  }

  #slides .slide {
    width: 25%;
    float: left;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    color: #fff;
  }

  @keyframes slide {
    0% {
      margin-left: 0;
    }

    20% {
      margin-left: 0;
    }

    25% {
      margin-left: -100%;
    }

    45% {
      margin-left: -100%;
    }

    50% {
      margin-left: -200%;
    }

    70% {
      margin-left: -200%;
    }

    75% {
      margin-left: -300%;
    }

    100% {
      margin-left: -300%;
    }
  }

  /*carrusel de servicios - final*/
  /***/
  @media screen and (min-width: 300px) and (max-width: 1023px) {
    #slider {
      margin: auto;
    }

    #slides {
      width: 100%;
    }

    #overflow {
      height: auto;
      margin-left: auto;
      margin-right: auto;
    }

    #slides .inner {
      height: auto;
    }

    #slides .slide {
      width: 25%;
      height: 100%;
    }
  }
</style>
